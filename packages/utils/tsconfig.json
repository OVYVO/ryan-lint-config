{
  "include": ["modules/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "outDir": "./bin",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["modules/*"]
    }
  }
}

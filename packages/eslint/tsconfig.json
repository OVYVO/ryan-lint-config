{
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist", "lib"],
  "compilerOptions": {
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "outDir": "./bin",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  }
}
